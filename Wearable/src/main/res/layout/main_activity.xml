<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="@color/black">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:id="@+id/statusbar"
        android:background="@color/white">
        <ImageButton
            android:background="@drawable/roundbutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageButton"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:background="@drawable/ic_settings_bluetooth_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClicked"
            android:id="@+id/searchForHRM"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/StartTrainingButton"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/messageLabel"
            android:textColor="@color/black"
            android:layout_below="@+id/SWbatteryLabel"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SW:"
            android:id="@+id/SWbatteryLabel"
            android:layout_toLeftOf="@+id/batteryLabel"
            android:editable="true"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HRM:"
            android:id="@+id/batteryLabel"
            android:editable="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black" />

    </RelativeLayout>

    <!--<ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:src="@drawable/battery_100"
        android:contentDescription="@string/SWBattery_Desc"
        android:layout_height="20dp"/>-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/CenterLayout"
        android:layout_below="@+id/statusbar"
        android:layout_above="@+id/BottomLayout">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/HRLayout"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HR"
                android:id="@+id/heartRateLabel"
                android:editable="true"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/diag_button_side_padding_right_round"
                android:gravity="center"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <com.jjoe64.graphview.GraphView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/heartRateGraph"
            android:layout_toEndOf="@+id/HRLayout"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:id="@+id/BottomLayout"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:background="@drawable/roundbutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/colorButton"
            android:layout_margin="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:background="@drawable/roundbutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/colorButtonRight"
            android:layout_margin="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:background="@drawable/ic_brightness_2_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClicked"
            android:id="@+id/exitAppButton"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/StartSleepButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp" />

        <ImageButton
            android:background="@drawable/ic_directions_run_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClicked"
            android:id="@+id/switchTrainingButton"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/StartTrainingButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer"
            android:text="0:00"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/colorButton"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black" />


    </RelativeLayout>


</RelativeLayout>
