<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusbar"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/messageLabel"
            android:editable="true"
            android:textColor="@color/black" />

    </RelativeLayout>

    <ImageButton
        android:background="#ffffff"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/colorButton"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CenterLayout" />

    <ImageButton
        android:background="@drawable/ic_brightness_2_black_24dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="onClicked"
        android:id="@+id/exitAppButton"
        android:contentDescription="@string/StartSleepButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp" />

    <ImageButton
        android:background="@drawable/ic_directions_run_black_24dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="onClicked"
        android:id="@+id/switchTrainingButton"
        android:contentDescription="@string/StartTrainingButton"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <!--<ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:src="@drawable/battery_100"
        android:contentDescription="@string/SWBattery_Desc"
        android:layout_height="20dp"/>-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterLayout"
        android:background="@color/white"
        android:layout_below="@+id/statusbar"
        android:layout_above="@+id/exitAppButton">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HRLayout"
            android:background="@color/white"
            android:layout_toLeftOf="@+id/heartRateGraph"
            android:layout_centerVertical="true">

        </RelativeLayout>

        <com.jjoe64.graphview.GraphView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/heartRateGraph"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/SWBattery_Desc"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_toStartOf="@+id/heartRateGraph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR"
            android:id="@+id/heartRateLabel"
            android:editable="true"
            android:textColor="@color/green"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/HRLayout"
            android:textSize="@dimen/diag_button_side_padding_right_round"
            android:gravity="center"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW Battery:"
        android:id="@+id/SWbatteryLabel"
        android:editable="true"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/switchTrainingButton"
        android:layout_toEndOf="@+id/switchTrainingButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HRM Battery:"
        android:id="@+id/batteryLabel"
        android:editable="true"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/exitAppButton"
        android:layout_toEndOf="@+id/switchTrainingButton" />




</RelativeLayout>
