<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Material.Light.custom" parent="android:Theme.Holo.Light" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/statusbar_background_color</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <color name="actionbar_text_color">#FFFFFF</color>
    <color name="actionbar_background_color">#3b5998</color>
    <color name="statusbar_background_color">#2b4988</color>
</resources>