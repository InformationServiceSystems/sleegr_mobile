<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Material.Light.custom" parent="android:Theme.Material.Light.DarkActionBar" >
        <item name="android:statusBarColor">@color/statusbar_background_color</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColorAlertDialogListItem">@color/actionbar_text_color</item>
    </style>

    <style name="MyActionButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <style name="Lock.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">?attr/Auth0.PrimaryColor</item>
        <item name="colorPrimaryDark">?attr/Auth0.HeaderBackground</item>
        <item name="android:windowBackground">@color/com_auth0_lock_form_background</item>
        <item name="Auth0.HeaderLogo">@drawable/com_auth0_lock_header_logo</item>
        <item name="Auth0.HeaderTitle">@string/com_auth0_lock_header_title</item>
        <item name="Auth0.HeaderTitleColor">@color/com_auth0_lock_text</item>
        <item name="Auth0.HeaderBackground">@color/com_auth0_lock_header_background</item>
        <item name="Auth0.PrimaryColor">@color/actionbar_background_color</item>
        <item name="Auth0.DarkPrimaryColor">@color/statusbar_background_color</item>
    </style>

    <color name="actionbar_text_color">#FFFFFF</color>
    <color name="actionbar_background_color">#3b5998</color>
    <color name="statusbar_background_color">#2b4988</color>
</resources>